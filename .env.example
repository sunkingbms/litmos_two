# Litmos User Management Tool - Environment Variables Configuration

# Flask Configuration
SESSION_SECRET=your_session_secret_key_here
FLASK_ENV=production
PORT=5000

# Litmos API Configuration
LITMOS_BASE_URL=https://api.litmos.com/v1.svc
LITMOS_API_KEY=your_litmos_api_key_here
LITMOS_SOURCE=sourceapp

# CSV Upload Limits (30-100 users per CSV)
MIN_RECORDS=30
MAX_RECORDS=100

# Background Processing Configuration
BG_MAX_WORKERS=2
BG_MAX_INFLIGHT=4
USER_OP_DELAY=0.02

# HTTP Connection Pool Settings
OUTBOUND_TIMEOUT=30
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=10
MAX_POOL_SIZE=20
MAX_RETRIES=3
BACKOFF_FACTOR=0.5

# Logging Configuration
LOG_DIR=/tmp/logs
LOG_LEVEL=INFO

# Optional: Google Cloud Configuration (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
ALLOWED_DOMAIN=yourdomain.com
GCS_BUCKET=your_gcs_bucket_name

# Optional: For debugging
DEV_SHOW_TRACEBACK=false
